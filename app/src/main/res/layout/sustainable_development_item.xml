<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="@dimen/margin_180dp"
        android:layout_height="@dimen/margin_120dp"
        android:src="@drawable/food_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodForAllTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/food_for_all"
        android:textColor="@color/end_color"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodImageView" />

    <TextView
        android:id="@+id/readMoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:alpha="0.7"
        android:background="@drawable/read_more_background"
        android:fontFamily="@font/roboto_bold"
        android:padding="@dimen/margin_5dp"
        android:paddingStart="@dimen/margin_10dp"
        android:paddingEnd="@dimen/margin_10dp"
        android:text="@string/read_more"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/foodImageView"
        app:layout_constraintTop_toBottomOf="@id/foodForAllTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>